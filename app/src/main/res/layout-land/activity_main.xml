<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My App Portfolio"
        android:id="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Spotify Streamer"
        android:background="#FFF08C35"
        android:id="@+id/buttonSpotify"
        android:layout_marginTop="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="sendMessage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Football Scores App"
        android:background="#FFF08C35"
        android:id="@+id/buttonScores"
        android:layout_below="@+id/buttonSpotify"
        android:layout_alignRight="@+id/buttonSpotify"
        android:layout_alignEnd="@+id/buttonSpotify"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="sendMessage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Library App"
        android:background="#FFF08C35"
        android:id="@+id/buttonLibrary"
        android:layout_below="@+id/buttonScores"
        android:layout_alignRight="@+id/buttonScores"
        android:layout_alignEnd="@+id/buttonScores"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="sendMessage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Build It Bigger"
        android:background="#FFF08C35"
        android:id="@+id/buttonBigger"
        android:layout_below="@+id/buttonLibrary"
        android:layout_alignRight="@+id/buttonLibrary"
        android:layout_alignEnd="@+id/buttonLibrary"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="sendMessage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="XYZ Reader"
        android:id="@+id/buttonXYZ"
        android:background="#FFF08C35"
        android:layout_below="@+id/buttonBigger"
        android:layout_alignRight="@+id/buttonBigger"
        android:layout_alignEnd="@+id/buttonBigger"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="sendMessage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capstone: My Own App"
        android:id="@+id/buttonCapstone"
        android:background="#ffff0000"
        android:layout_below="@+id/buttonXYZ"
        android:layout_alignRight="@+id/buttonXYZ"
        android:layout_alignEnd="@+id/buttonXYZ"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="sendMessage" />

</RelativeLayout>
